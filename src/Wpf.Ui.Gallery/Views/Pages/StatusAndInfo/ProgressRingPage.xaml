<Page
  x:Class="Wpf.Ui.Gallery.Views.Pages.StatusAndInfo.ProgressRingPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:controls="clr-namespace:Wpf.Ui.Gallery.Controls"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:Wpf.Ui.Gallery.Views.Pages.StatusAndInfo"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:system="clr-namespace:System;assembly=System.Runtime"
  xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
  Title="ProgressRingPage"
  controls:PageControlDocumentation.DocumentationType="{x:Type ui:ProgressRing}"
  d:DataContext="{d:DesignInstance local:ProgressRingPage,
                                     IsDesignTimeCreatable=False}"
  d:DesignHeight="450"
  d:DesignWidth="800"
  ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
  ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
  Foreground="{DynamicResource TextFillColorPrimaryBrush}"
  mc:Ignorable="d"
>
  <controls:ControlExample
    Margin="0"
    HeaderText="An indeterminate WPF UI progress ring."
    XamlCode="&lt;ui:ProgressRing IsIndeterminate=&quot;True&quot; /&gt;"
  >
    <ui:ProgressRing IsIndeterminate="True" />
  </controls:ControlExample>
</Page>
