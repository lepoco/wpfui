<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Wpf.Ui.Controls"
    x:Shared="True">

    <controls:FontTypographyPreset
        x:Key="CaptionTextBlockStyle"
        FontSize="12"
        FontWeight="Regular" />

    <controls:FontTypographyPreset
        x:Key="BodyTextBlockStyle"
        FontSize="14"
        FontWeight="Regular" />

    <controls:FontTypographyPreset
        x:Key="BodyStrongTextBlockStyle"
        FontSize="14"
        FontWeight="SemiBold" />

    <controls:FontTypographyPreset
        x:Key="SubtitleTextBlockStyle"
        FontSize="20"
        FontWeight="SemiBold" />

    <controls:FontTypographyPreset
        x:Key="TitleTextBlockStyle"
        FontSize="28"
        FontWeight="SemiBold" />

    <controls:FontTypographyPreset
        x:Key="TitleLargeTextBlockStyle"
        FontSize="40"
        FontWeight="SemiBold" />

    <controls:FontTypographyPreset
        x:Key="DisplayTextBlockStyle"
        FontSize="68"
        FontWeight="SemiBold" />

</ResourceDictionary>
