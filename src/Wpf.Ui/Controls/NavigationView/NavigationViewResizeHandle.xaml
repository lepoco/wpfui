<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Wpf.Ui.Controls">

    <Style x:Key="DefaultNavigationViewResizeHandleStyle" TargetType="{x:Type controls:NavigationViewResizeHandle}">
        <Setter Property="Width" Value="4" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:NavigationViewResizeHandle}">
                    <Border
                        x:Name="PART_Border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        
                        <!-- リサイズハンドルの視覚的なインジケーター -->
                        <Rectangle
                            x:Name="ResizeIndicator"
                            Width="2"
                            Height="20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Fill="{DynamicResource NavigationViewItemForeground}"
                            Opacity="0.3"
                            RadiusX="1"
                            RadiusY="1" />
                    </Border>
                    
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ResizeIndicator" Property="Opacity" Value="0.6" />
                            <Setter TargetName="PART_Border" Property="Background" Value="{DynamicResource NavigationViewItemBackgroundPointerOver}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style BasedOn="{StaticResource DefaultNavigationViewResizeHandleStyle}" TargetType="{x:Type controls:NavigationViewResizeHandle}" />

</ResourceDictionary>
